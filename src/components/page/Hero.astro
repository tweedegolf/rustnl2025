---
interface Props {
    style?: "page" | "home";
}

const { style = "page" }: Props = Astro.props;
---

<section class:list={["hero", style]}>
    <slot />
</section>

<style lang="scss" is:global>
    @import "../../styles/breakpoint.scss";
    @import "../../styles/variables.scss";

    .hero {
        align-items: center;
        background: $color-yellow-400;
        box-sizing: border-box;
        color: white;
        display: flex;
        flex-direction: column;
        font-size: $font-size-xl;
        font-weight: 700;

        gap: space(10);
        justify-content: center;
        line-height: $line-height-tight;
        min-height: 100svh;
        padding-block: space(12);
        padding-inline: space(6);
        position: relative;
        text-align: center;
        z-index: 0;

        @include wider_than(md) {
            border-width: space(6) space(6) 0 space(6);
            padding-block: space(12);
            padding-inline: space(6);
        }

        @include wider_than(xl) {
            border-width: space(12) space(12) 0 space(12);
            padding-block: space(24);
            padding-inline: space(12);
        }

        &::before {
            background: $color-yellow-500;
            clip-path: polygon(0 0, 100% 0, 100% 100%);
            content: "";
            inset: 0;
            position: absolute;
            z-index: -1;
        }

        &::after {
            background-image: url("/images/stripes.svg");
            background-position: center center;
            background-repeat: no-repeat;
            background-size: 100% auto;
            bottom: 0;
            content: "";
            height: space(6);
            max-width: 44.25rem;
            position: absolute;
            width: 100%;
        }

        svg {
            height: auto;
            max-width: 95vw;

            @include wider_than(md) {
                max-width: 60vw;
            }

            @include wider_than(xl) {
                max-width: 40vw;
            }
        }

        .nav {
            display: flex;
            justify-content: space-between;
            flex: 1;
            width: 100%;
            align-items: center;
        }

        &.page {
            min-height: 384px;

            img {
                max-height: 3rem;
            }
        }
    }
</style>
